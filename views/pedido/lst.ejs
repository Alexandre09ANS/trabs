<%- include('../cabecalho.ejs') %>
    <form method="post">
        <input type="text" name="pesquisar">
        <input type="submit" value="Pesquisar" class="btn btn-primary">
    </form>

    <table>
        <tr>
            <th style="text-align: justify">Id</th>
            <th style="text-align: justify">Produto</th>
            <th style="text-align: justify">Descrição</th>
            <th style="text-align: ju0stify">Cliente</th>
            <th style="text-align: justify">Data</th>
            <th style="text-align: justify">foto</th>
            <th style="text-align: justify">Editar</th>
            <th style="text-align: justify">Deletar</th>
        </tr>
        <% Pedidos.forEach(function(pedido){%>
        <tr>
            <td style="text-align: justify"><%=pedido._id %></td>
            <td style="text-align: justify"><%=pedido.produto._id%></td>
            <td style="text-align: justify"><%=pedido.avaliacaoProdutos %></td>
            <td style="text-align: justify">
                    <%=pedido.cliente.nome%><br>
            </td>
            <td style="text-align: justify"><%=pedido.data %></td>
            <td style="text-align: justify"><a href="/admin/pedido/edt/<%=pedido._id %>">Editar</a></td>
            <td style="text-align: justify"><a href="/admin/pedido/del/<%=pedido._id %>">Excluir</a></td>
        </tr>
        <% })%>
    </table>
